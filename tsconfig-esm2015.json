// TypeScript config file that is used to compile the library into ES2015.
{
  "files": [
    "public-api.ts"
  ],

  "compilerOptions": {
    "declaration": true,
    "stripInternal": false,
    "experimentalDecorators": true,

    "noUnusedParameters": true,
    "strictNullChecks": true,
    "importHelpers": true,
    "newLine": "lf",

    "module": "es2015",
    "moduleResolution": "node",

    "outDir": "./tmp/esm2015",
    "rootDir": ".",
    "rootDirs": [
      ".",
      "./tmp/angular-draft-js"
    ],

    "sourceMap": true,
    "inlineSources": true,

    "target": "es2015",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,

    "types": [],

    "baseUrl": "."

  },

  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "angular-draft.js",
    "flatModuleId": "angular-draft-js"
  }
}
